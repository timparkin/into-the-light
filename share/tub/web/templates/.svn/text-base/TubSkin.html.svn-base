<!DOCTYPE html
  PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns:n="http://nevow.com/ns/nevow/0.1">

  <head>
    <title n:render="pageTitle"><n:slot name="title"/></title>
    <script type="text/javascript" src="/static/js/jquery-1.2.1.pack.js"></script>
    <script type="text/javascript" src="/static/js/jQTreeTable.js"></script>
    <script type="text/javascript" src="/static/js/tabbedPane.js"></script>
    <script type="text/javascript" src="/static/js/categoriesPanel.js"></script>
    <script type="text/javascript" src="/static/js/ImagePicker.js"></script>
    <script type="text/javascript" src="/static/js/ItemSelection.js"></script>
    <script type="text/javascript" src="/static/js/sso.js"></script>
    <script type="text/javascript" src="/static/js/tiny_mce/tiny_mce.js"></script>
    <link rel="stylesheet" type="text/css" href="/static/css/tub.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/forms.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/tabbedPane-layout.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/tabbedPane-style.css"/>    
    <n:invisible n:render="fragment HeadExtras.html" />
  </head>

  <body>

    <div id="header">
      <h1 n:render="pageTitle"><n:slot name="title"/></h1>
    </div>

    <div id="component-navigation-cnr">
      <div id="component-navigation">
        <a class="home" href="/">Home</a>
        <n:invisible n:render="tubNavigation" />
        <a class="logout" href="#" n:render="logoutAvatarURL"><n:attr name="href"><n:slot
          name="url"/></n:attr>Logout</a>
      </div>
    </div>


    <div id="component-cnr">
      <n:invisible n:render="flashMessage" />
      <div id="component" n:macro="componentContent">
        <p>Component content goes here.</p>
      </div>
    </div>


    <div id="sso" n:render="sso_widget">
      <form id="sso_form" method="GET">
        <label for="sso_site">Switch Site</label>
        <select id="sso_site" name="site" n:data="sso_sites" n:render="sequence">
          <option n:pattern="item" n:render="sso_site"><n:attr name="value"><n:slot name="value" /></n:attr><n:slot name="label" /></option>
        </select>
      </form>
      <script type="text/javascript">
        //<![CDATA[
        sso.enhanceForm('sso_site');
        //]]>
      </script>
    </div>

  </body>

</html>
