form {
  margin: 0 0 1em 0;
  border: 0;
  padding: 0;
}

form fieldset {
  border: 1px solid #dddfc3;
  padding: 1em;
}

form .inputs input, form .actions input, form .table_actions input {
  border: 1px solid #dddfc3;
}

form .checkbox .inputs input, form .checkboxmultichoice .inputs input,
    form .radiochoice .inputs input {
  border: 0;
}

form .field {
  clear: left;
  margin-bottom: 1em;
}

form .group {
  clear: both;
}

form label {
  float: left;
  clear: left;
  width: 10em;
  margin-bottom: 1em;
}

form .inputs label {
  display: inline;
  float: none;
  clear: none;
}

form .inputs, .nevow-form .message, .nevow-form .description {
  margin-left: 10.5em;
  padding: 0;
}

form .actions {
  padding-left: 10.5em;
  padding-top: 1em;
  border-top: 1px dashed #dddfc3;
}

form .actions input, form .table_actions input {
  border-top: 1px solid #dddfc3;
  border-left: 1px solid #dddfc3;
  border-bottom: 1px solid #bcbfa7;
  border-right: 1px solid #bcbfa7;
}

.nevow-form .field.required label {
  font-weight: bold;
}

.nevow-form .field.required .inputs label {
  font-weight: normal;
}

.nevow-form .message {
  color: #900;
  font-weight: bold;
}

.nevow-form .errors {
  padding: 0.5em 1em 0 1em;
  border: 1px solid #efe6e1;
  background: #fff0f0;
  margin-bottom: 2em;
}
.nevow-form .preview-show {
  display: block;
}

.nevow-form .preview-hidden {
  display: none;
}

.nevow-form .checkboxtreemultichoice ul {
  list-style: none;
  margin-left: 0;
  padding-left: 0;
}

.nevow-form .checkboxtreemultichoice ul ul li {
  margin-top: 0.5em;
  margin-left: 2em;
}

.nevow-form .textinput input {
  width: 50%;
}

.nevow-form .richtextarea textarea {
  width: 80%;
  height: 8em;
}

.nevow-form .richtextarea .preview-frame {
  height: 500px;
  width: 80%;
}

