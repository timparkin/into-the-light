<n:invisible xmlns:n="http://nevow.com/ns/nevow/0.1" n:render="inherit Skin.html">
<n:invisible n:pattern="title">Site Search</n:invisible>
<n:invisible n:pattern="admin" n:render="admin" />
<n:invisible n:pattern="headextra" />
  <n:invisible n:pattern="page-content">


    <div id="sidepanel">
      <h2 class="sifr">Site Search</h2>
      <p>This site is organised in various areas. The Gallery has it's own search, as does the Blog. If you wish to find anything else, please use the search either at the bottom of every page or the one below this text.</p>
      <div class="search">
        <h3>search</h3>
        <div class="item">
          <p>Use the following form to search this site. Alternatively you may use the advanced search by clicking <a href="#">here"</a>.</p>

        </div>
        <form action="/search">
          <label>search term</label>
          <input id="text" name="q" type="text"><n:attr name="value"><n:invisible n:render="q" /></n:attr></input>
          <input class="action" type="submit" value="click here to search" />
        </form>
      </div>
    </div>

    <div id="searchcontent" class="clearfix">
    <h2 class="sifr">Search Results</h2>
    <dl> 
    <n:invisible n:data="pages" n:render="paging 10">
      <dt n:render="item" n:pattern="item"><h3 class="sifr"><n:slot name="title" /></h3>
      <br />
      <n:invisible n:data="2" n:render="if">
        <n:invisible n:render="data" />
        <br />
      </n:invisible>
      <strong>URLss:</strong><n:slot name="href" />

      </dt>
    </n:invisible>
    </dl>

    <n:invisible n:render="paging_controls_or_message">
      <n:invisible n:pattern="hasData" n:render="fragment paging_controls" />
      <n:invisible n:pattern="noData">
       <p class="noresults">Sorry, there are no pages matching that search.</p>
      </n:invisible>
    </n:invisible>
    </div>






  </n:invisible>
</n:invisible>

